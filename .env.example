# Server
PORT=3000
NODE_ENV=development

# Database (Connecting to Docker MariaDB)
DATABASE_URL=mysql://clearlet_user:clearlet_password@localhost:3308/clearlet_mvp

# Authentication
JWT_SECRET=dev-secret-key-change-in-production

# Storage (Connecting to Docker MinIO)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1
AWS_BUCKET_NAME=clearlet-uploads
AWS_ENDPOINT=http://localhost:9008
# We wont need S3_FORCE_PATH_STYLE for production.
S3_FORCE_PATH_STYLE=true

# ============================================
# IONOS S3 (Production Example)
# ============================================
# IONOS_S3_ACCESS_KEY=your-ionos-access-key
# IONOS_S3_SECRET_KEY=your-ionos-secret-key
# IONOS_S3_REGION=eu-central-1
# IONOS_S3_BUCKET_NAME=clearlet2025
# IONOS_S3_ENDPOINT=https://s3-eu-central-1.ionoscloud.com

# ============================================
# EMAIL (SMTP)
# ============================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@clearlet.com

# ============================================
# STRIPE PAYMENT INTEGRATION
# ============================================
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Google Maps
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here